<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Calendario - {{username}}</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/styles.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    header {
      background-color: #343a40;
      color: #fff;
      padding: 1rem 0;
      margin-bottom: 1.5rem;
    }
    header h1 {
      font-size: 2rem;
    }
    .back-btn {
      color: #343a40;
      background-color: #ffc107;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      text-decoration: none;
      font-weight: bold;
    }
    .back-btn:hover {
      background-color: #e0a800;
      color: #fff;
    }
    .calendar-table th, .calendar-table td {
      vertical-align: middle;
      text-align: center;
    }
    .calendar-table .slot {
      cursor: pointer;
      transition: background-color 0.3s;
      min-height: 80px; /* Adjusted height */
      position: relative; /* Needed for absolute positioning of appointment info */
      padding: 0.5rem; /* Add some padding */
    }
    .calendar-table .slot:hover:not(.booked) { /* Only hover effect on available slots */
      background-color: #e9ecef;
    }
    .calendar-table .slot.booked {
      background-color: #f8d7da; /* Light red for booked slots */
      cursor: not-allowed;
      font-size: 0.8rem; /* Smaller font for appointment details */
      color: #721c24; /* Darker text for booked slots */
    }
    .appointment-info {
        font-weight: bold;
    }
    .appointment-desc {
        font-style: italic;
        font-size: 0.75rem;
        display: block; /* Ensure description takes its own line */
        margin-top: 0.2rem;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header>
    <div class="container d-flex justify-content-between align-items-center">
      <h1>Calendario Settimanale - {{username}}</h1>
      <a href="/utente/home" class="back-btn">Torna alla home</a>
    </div>
    <div class="container">
      <p id="weekRange"></p>
    </div>
  </header>

  <!-- Navigazione tra le settimane -->
  <div class="container mb-3">
    <div class="d-flex justify-content-between">
      <button id="prevWeek" class="btn btn-outline-primary">Settimana Precedente</button>
      <button id="nextWeek" class="btn btn-outline-primary">Settimana Successiva</button>
    </div>
  </div>

  <!-- Calendario -->
  <main class="container">
    <div class="table-responsive">
      <table class="table table-bordered calendar-table">
        <thead class="table-light" id="calendarHeader">
          <!-- Header generato dinamicamente -->
        </thead>
        <tbody id="calendarBody">
          <!-- Corpo generato dinamicamente -->
        </tbody>
      </table>
    </div>
  </main>

  <!-- Modal per la prenotazione -->
  <div class="modal fade" id="appointmentModal" tabindex="-1" aria-labelledby="appointmentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="appointmentModalLabel">Prenota Appuntamento</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
        </div>
        <div class="modal-body">
          <div id="modalError" class="alert alert-danger d-none" role="alert"></div>
          <form id="appointmentForm">
            <div class="mb-3">
              <label for="modalDate" class="form-label">Data</label>
              <input type="text" class="form-control" id="modalDate" name="data" readonly>
            </div>
            <div class="mb-3">
              <label for="modalTime" class="form-label">Ora</label>
              <input type="text" class="form-control" id="modalTime" name="ora" readonly>
            </div>
            <div class="mb-3">
              <label for="modalDescription" class="form-label">Descrizione/Servizio</label>
              <textarea class="form-control" id="modalDescription" name="descrizione" rows="3" required></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
          <button type="button" class="btn btn-primary" id="saveAppointmentBtn">Salva</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Socket.io -->
  <script src="/socket.io/socket.io.js"></script>
  <script>
    // Calcolo della settimana corrente e navigazione
    let currentDate = new Date();
    let currentAppointments = []; // Array per memorizzare gli appuntamenti della settimana
    const parrucchiereUsername = '{{username}}'; // Prende l'username dall'URL o contesto HBS
    const appointmentModal = new bootstrap.Modal(document.getElementById('appointmentModal'));
    const modalErrorDiv = document.getElementById('modalError');

    function getWeekRange(date) {
      const currentDay = date.getDay(); // 0 (Domenica) - 6 (Sabato)
      const diffToMonday = (currentDay === 0 ? -6 : 1 - currentDay); // Adjust to make Monday the first day
      const monday = new Date(date);
      monday.setDate(date.getDate() + diffToMonday);
      monday.setHours(0, 0, 0, 0); // Start of Monday

      const sunday = new Date(monday);
      sunday.setDate(monday.getDate() + 6);
      sunday.setHours(23, 59, 59, 999); // End of Sunday

      return { monday, sunday };
    }

    function formatDate(date) {
      // Formato YYYY-MM-DD
      return date.toISOString().split('T')[0];
    }

    // Funzione per caricare gli appuntamenti per la settimana corrente
    async function loadAppointments(startDate, endDate) {
      try {
        // Costruisci l'URL corretto per l'API degli appuntamenti
        const apiUrl = `/utente/calendario/${parrucchiereUsername}/appuntamenti`;
        console.log(`Fetching appointments from: ${apiUrl}`); // Debug log
        const response = await fetch(apiUrl);
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        currentAppointments = await response.json();
        console.log('Appointments loaded:', currentAppointments); // Debug log
        // Assicurati che le date/ore siano confrontabili
        currentAppointments.forEach(app => {
            app.dateTime = `${app.giorno}T${app.ora}:00`; // Combina data e ora per confronto
        });
      } catch (error) {
        console.error('Errore nel caricamento degli appuntamenti:', error);
        currentAppointments = []; // Resetta in caso di errore
        // Mostra un errore all'utente se necessario
      }
    }


    // Genera l'header del calendario (nome del giorno e data sotto)
    function renderCalendarHeader(weekDays) {
      const header = document.getElementById('calendarHeader');
      header.innerHTML = '';
      const row = document.createElement('tr');
      const thTime = document.createElement('th');
      thTime.innerText = 'Ora';
      row.appendChild(thTime);
      weekDays.forEach(day => {
        const th = document.createElement('th');
        // Formatta la data come DD/MM
        const displayDate = new Date(day.date + 'T00:00:00').toLocaleDateString('it-IT', { day: '2-digit', month: '2-digit' });
        th.innerHTML = `<div>${day.name}</div><div style="font-size:0.9rem;">${displayDate}</div>`;
        row.appendChild(th);
      });
      header.appendChild(row);
    }

    // Genera il corpo del calendario (ore e slot) - MODIFICATO
    function renderCalendarBody(weekDays, ore) {
      const body = document.getElementById('calendarBody');
      body.innerHTML = ''; // Pulisce il corpo prima di ridisegnare
      ore.forEach(time => {
        const row = document.createElement('tr');
        const tdTime = document.createElement('td');
        tdTime.innerText = time;
        row.appendChild(tdTime);

        weekDays.forEach(day => {
          const td = document.createElement('td');
          td.classList.add('slot');
          const slotDateTime = `${day.date}T${time}:00`; // Formato ISO semplificato per confronto

          // Cerca se esiste un appuntamento per questo slot
          const appointment = currentAppointments.find(app => app.dateTime === slotDateTime);

          if (appointment) {
            // Slot prenotato
            td.classList.add('booked');
            td.innerHTML = `<span class="appointment-info">Prenotato</span><span class="appointment-desc">${appointment.descrizione || ''}</span>`;
            // Non aggiungere l'event listener per aprire il modal
          } else {
            // Slot libero
            td.id = `slot-${day.date}-${time}`; // ID solo per slot liberi
            td.addEventListener('click', () => openModal(day.date, time));
          }
          row.appendChild(td);
        });
        body.appendChild(row);
      });
    }

    async function renderWeek() {
      const { monday, sunday } = getWeekRange(currentDate);
      // Carica gli appuntamenti per la settimana visualizzata
      await loadAppointments(formatDate(monday), formatDate(sunday));

      const weekDays = [];
      for (let i = 0; i < 7; i++) {
        const d = new Date(monday);
        d.setDate(monday.getDate() + i);
        const options = { weekday: 'long' };
        const dayName = d.toLocaleDateString('it-IT', options);
        weekDays.push({
          name: dayName.charAt(0).toUpperCase() + dayName.slice(1),
          date: formatDate(d) // Formato YYYY-MM-DD
        });
      }
      // Mostra il range della settimana nell'header
      const startFormatted = monday.toLocaleDateString('it-IT', { day: '2-digit', month: '2-digit' });
      const endFormatted = sunday.toLocaleDateString('it-IT', { day: '2-digit', month: '2-digit', year: 'numeric' });
      document.getElementById('weekRange').innerText = `Settimana: ${startFormatted} - ${endFormatted}`;

      // Renderizza header e corpo
      renderCalendarHeader(weekDays);
      const ore = ['08:00','09:00','10:00','11:00','12:00','13:00','14:00','15:00','16:00','17:00','18:00','19:00','20:00','21:00']; // Orari disponibili
      renderCalendarBody(weekDays, ore);
    }

    // --- Gestione Modal ---
    function openModal(data, time) {
      // Nascondi eventuali messaggi di errore precedenti
      modalErrorDiv.classList.add('d-none');
      modalErrorDiv.textContent = '';

      document.getElementById('modalDate').value = data;
      document.getElementById('modalTime').value = time;
      document.getElementById('modalDescription').value = ''; // Pulisci descrizione precedente
      appointmentModal.show();
    }

    async function saveAppointment() {
      const data = document.getElementById('modalDate').value;
      const time = document.getElementById('modalTime').value;
      const descrizione = document.getElementById('modalDescription').value;

      // Disabilita il bottone Salva per prevenire click multipli
      const saveButton = document.getElementById('saveAppointmentBtn');
      saveButton.disabled = true;
      modalErrorDiv.classList.add('d-none'); // Nascondi errore

      try {
        const response = await fetch(`/utente/calendario/${parrucchiereUsername}/appuntamento`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ giorno: data, ora: time, descrizione })
        });
        const result = await response.json();

        if (response.ok && result.success) {
          appointmentModal.hide(); // Chiudi il modal
          await renderWeek(); // Ricarica la vista della settimana per mostrare il nuovo appuntamento
        } else {
          // Mostra errore nel modal
          modalErrorDiv.textContent = result.message || 'Errore nella prenotazione.';
          modalErrorDiv.classList.remove('d-none');
        }
      } catch (error) {
        console.error('Errore nella chiamata fetch:', error);
        modalErrorDiv.textContent = 'Errore di comunicazione con il server.';
        modalErrorDiv.classList.remove('d-none');
      } finally {
          // Riabilita il bottone Salva in ogni caso
          saveButton.disabled = false;
      }
    }

    // Event listener per il bottone Salva nel modal
    document.getElementById('saveAppointmentBtn').addEventListener('click', saveAppointment);


    // --- Navigazione Settimane e Inizializzazione ---
    document.getElementById('prevWeek').addEventListener('click', () => {
      currentDate.setDate(currentDate.getDate() - 7);
      renderWeek();
    });
    document.getElementById('nextWeek').addEventListener('click', () => {
      currentDate.setDate(currentDate.getDate() + 7);
      renderWeek();
    });

    // Inizializzazione al caricamento della pagina
    renderWeek();

    // --- Socket.io per aggiornamenti (Opzionale ma utile) ---
    const socket = io();
    socket.on('appointmentUpdated', data => {
      // Se l'aggiornamento riguarda il parrucchiere visualizzato, aggiorna la vista
      if (data.parrucchiere === parrucchiereUsername) {
        console.log('Ricevuto aggiornamento via Socket.io, ricarico la settimana...');
        renderWeek(); // Ricarica la settimana corrente
      }
    });

  </script>
</body>
</html>