<!DOCTYPE html>
<html lang="it">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Utente</title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Cerchio per mostrare le informazioni dell'utente -->
    <div class="profile-icon" onclick="toggleProfileInfo()">
        <span>{{firstLetter name}}</span>
    </div>

    <!-- Informazioni utente -->
    <div id="profileInfo" class="profile-info">
        <p><strong>Nome:</strong> {{name}}</p>
        <p><strong>Ruolo:</strong> {{role}}</p>
        <a href="/logout" class="logout-btn">Logout</a>
    </div>

    <header>
        <h1>{{message}}</h1>
    </header>

    <main class="container">
        <p class="text-center">Benvenuto nella tua home, {{name}}!</p>
        <!-- Contatore visitatori in tempo reale -->
        <div id="visitorCount" class="text-center mb-4">Visitatori online: 0</div>

        <!-- Sezione parrucchieri -->
        <section>
            <h2 class="mb-4 text-center">Scegli un parrucchiere</h2>
            <div class="row g-4">
                {{#each parrucchieri}}
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title">{{nome_salone}}</h3>
                            <p class="card-text"><strong>Servizi:</strong> {{servizi}}</p>
                            <p class="card-text"><strong>Indirizzo:</strong> {{indirizzo}}</p>
                            <p class="card-text">
                                <strong>Telefono:</strong>
                                <span onclick="copyToClipboard('{{telefono}}')" class="text-primary"
                                    style="cursor: pointer;">
                                    {{telefono}} <small>(Clicca per copiare)</small>
                                </span>
                            </p>
                            <a href="/utente/calendario/{{username}}" class="btn btn-primary w-100">Vedi calendario</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Includi Socket.io client -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        // Riceve il conteggio aggiornato ogni 5 secondi
        socket.on('visitorCount', (count) => {
            document.getElementById('visitorCount').innerText = 'Visitatori online: ' + count;
        });

        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert('Numero di telefono copiato negli appunti');
            }).catch(err => {
                console.error('Errore durante la copia negli appunti:', err);
            });
        }

        function toggleProfileInfo() {
            const profileInfo = document.getElementById('profileInfo');
            profileInfo.style.display = profileInfo.style.display === 'none' || profileInfo.style.display === '' ? 'block' : 'none';
        }
    </script>
</body>

</html>
<style>
    /* Stile per il cerchio in alto a destra */
    .profile-icon {
        position: fixed;
        top: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
        background-color: #3498db;
        color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 18px;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Stile per le informazioni dell'utente */
    .profile-info {
        display: none;
        position: fixed;
        top: 70px;
        right: 20px;
        background-color: white;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 200px;
    }

    .profile-info p {
        margin: 5px 0;
    }

    .logout-btn {
        background-color: #e74c3c;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .logout-btn:hover {
        background-color: #c0392b;
    }

    /* Aggiungere stile per la sezione dei parrucchieri */
    section {
        margin-top: 20px;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    ul li {
        margin-bottom: 10px;
    }

    ul li a {
        text-decoration: none;
        color: #3498db;
    }

    ul li a:hover {
        color: #2c3e50;
    }
</style>